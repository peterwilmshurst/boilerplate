{
  "name": "boilerplate",
  "type": "module",
  "scripts": {
    "clean": "rimraf ./dist",
    "start": "npm run clean && parcel serve ./src/app.html --open Chrome --port 80 --lazy",
    "build": "npm run clean && parcel build ./src/app.html --no-source-maps",
    "lint": "eslint",
    "lint-fix": "npm run lint -- --fix",
    "test": "ava",
    "test-watch": "npm run test -- --watch"
  },
  "devDependencies": {
    "@eslint/js": "^9.5.0",
    "@stylistic/eslint-plugin": "^2.3.0",
    "ava": "^6.1.3",
    "eslint": "^9.5.0",
    "eslint-plugin-jsdoc": "^48.5.0",
    "parcel": "^2.12.0",
    "postcss": "^8.4.38",
    "rifraf": "^2.0.3",
    "tailwindcss": "^3.4.4"
  },
  "browserslist": "> 0.5%, last 2 versions, not dead"
}
